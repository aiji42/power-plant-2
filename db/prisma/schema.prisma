// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id         String   @id @default(uuid())
  code       String   @unique
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt
  title      String
  maker      String
  series     String
  genres     String[]
  url        String
  releasedAt DateTime
  imageUrls  String[]
  casts      Cast[]
  tasks      Task[]
  Media      Media[]
}

model Media {
  id        String   @id @default(uuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  url       String
  size      Int
  meta      Json
}

model Cast {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  name      String    @unique
  products  Product[]
}

model Task {
  id        String     @id @default(uuid())
  productId String
  product   Product    @relation(fields: [productId], references: [id])
  createdAt DateTime   @default(now())
  updatedAt DateTime   @default(now()) @updatedAt
  startedAt DateTime?
  stoppedAt DateTime?
  status    TaskStatus @default(Waiting)
  type      TaskType
  message   String?
  data      Json?
}

enum TaskStatus {
  Waiting
  Running
  Completed
  Failed
}

enum TaskType {
  Download
  Compress
}
